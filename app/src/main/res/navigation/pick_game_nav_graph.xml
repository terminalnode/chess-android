<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/FirstFragment">

  <fragment
    android:id="@+id/FirstFragment"
    android:name="com.example.newtonchess.activities.pickgame.FragmentViewChallenges"
    tools:layout="@layout/pick_game_fragment_challenges">

    <action
      android:id="@+id/action_FirstFragment_to_SecondFragment"
      app:destination="@id/SecondFragment" />
  </fragment>
  <fragment
    android:id="@+id/SecondFragment"
    android:name="com.example.newtonchess.activities.pickgame.FragmentViewGames"
    tools:layout="@layout/pick_game_fragment_games">

    <action
      android:id="@+id/action_SecondFragment_to_FirstFragment"
      app:destination="@id/FirstFragment" />
  </fragment>
</navigation>
